@model Ltracker.Models.CourseDetailViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>CourseDetailViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DurationAVG)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DurationAVG)  Hr/s
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">
        Temas
    </div>
    <div class="panel-body">
        @foreach (var topic in Model.Topics)
        {
            <div class="item">
                <input type="hidden" value="@topic.Id.Value.ToString()" /> @topic.Name
            </div>
        }
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
